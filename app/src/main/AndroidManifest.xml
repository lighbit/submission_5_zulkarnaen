<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.submission5">

    <permission
        android:name="com.example.submission5.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.example.submission5.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
<!--    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />-->

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name_movie"
        android:networkSecurityConfig="@xml/check_network_security"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning,UnusedAttribute">

        <provider
            android:name="com.example.submission5.provider.MoviesProvider"
            android:authorities="com.example.submission5"
            android:exported="true"
            android:readPermission="com.example.submission5.READ_DATABASE"
            android:writePermission="com.example.submission5.WRITE_DATABASE" />

        <activity
            android:name="com.example.submission5.SplashActivity"
            android:label="@string/app_name_movie">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.example.submission5.widget.MyFavoriteWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/my_favorite_widget_infos" />
        </receiver>

        <service
            android:name="com.example.submission5.widget.MyWidgetService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity
            android:name="com.example.submission5.notification.MenuSetting"
            android:parentActivityName="com.example.submission5.MainActivity" />

        <receiver
            android:name="com.example.submission5.notification.DailyPushNotificationForMovie"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name="com.example.submission5.notification.DailyUpcomingMovies"
            android:enabled="true"
            android:exported="false" />

        <activity android:name="com.example.submission5.MainActivity" />
        <activity android:name="com.example.submission5.view.MoviesDetailActivity" />
        <activity
            android:name="com.example.submission5.view.TVShowDetailActivity"
            android:label="TvShow Catalogue" />
        <activity android:name="com.example.submission5.favorit.MoviesFavorite" />
        <activity
            android:name="com.example.submission5.favorit.TvShowFavorite"
            android:label="TvShow Catalogue" />
        <activity android:name="com.example.submission5.view.SearchActivityMoviesFragment" />
        <activity android:name=".notification.AppCompatService" />
    </application>


</manifest>